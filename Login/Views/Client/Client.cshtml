@using Login.Models
@model IEnumerable<Client>

@{
    ViewBag.Title = "Client";
    Layout = "~/Views/_LayoutPage2.cshtml";
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
}

<br>
<h2>Liste of Clients</h2>
@if (ViewBag.Message.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@ViewBag.Message</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<br>
<a class='btn btn-primary btn-sm' href='../Create/Create'>New Clients</a>
<br>
<br>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Adress</th>
            <th>Created At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Client item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@item.Adress</td>
                <td>@item.Created_at</td>
                <td>
                    <a class='btn btn-primary btn-sm' href='../Edit/Edit?id=@item.Id'>Edit</a>
                    <a class="btn btn-danger btn-sm" href='../Delete/Delete?id=@item.Id'>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
